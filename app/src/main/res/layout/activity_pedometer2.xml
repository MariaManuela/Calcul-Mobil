<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedometerActivity">

    <TextView
        android:id="@+id/percentSteps"
        android:layout_width="365dp"
        android:layout_height="292dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="50%"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        >

        <ProgressBar

            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progress_bar"
            android:secondaryProgress="100"

            />

        <TextView
            android:id="@+id/progressText"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginLeft="-130dp"
            android:layout_marginTop="110dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:text="" />


        <ImageButton
            android:id="@+id/calendarButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="13dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/calendaricon" />


        <ImageView
            android:id="@+id/kcalIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="295dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/kcalburn" />


        <ImageView
            android:id="@+id/distanceIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-140dp"
            android:layout_marginTop="295dp"
            app:srcCompat="@drawable/distance" />

        <ImageView
            android:id="@+id/timeIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="295dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/icon_time" />


        <TextView
            android:id="@+id/stepsText"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-150dp"
            android:layout_marginTop="70dp"
            android:text="   0"
            android:textColor="#FFDAB9"
            android:textSize="40dp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/goalText"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-160dp"
            android:layout_marginTop="350dp"
            android:layout_weight="1"
            android:text="Goal/day:"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/shoeIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="180dp"
            app:srcCompat="@drawable/shoe" />

        <Button
            android:id="@+id/startPauseButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-0dp"
            android:layout_marginTop="400dp"
            android:text="START" />

        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-70dp"
            android:layout_marginTop="320dp"
            android:layout_weight="1"

            android:text="0" />

        <TextView
            android:id="@+id/kcalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-210dp"
            android:layout_marginTop="320dp"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-220dp"
            android:layout_marginTop="320dp"
            android:layout_weight="1"
            android:text="0" />


        <TextView
            android:id="@+id/valueText"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="350dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="15dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/settings" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>